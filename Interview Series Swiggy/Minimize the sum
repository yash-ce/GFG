class Solution {
public:
    int minimizeSum(int N, vector<int> arr) {
        // code here
        priority_queue<int, vector<int>, greater<int>> pq;
        for(int i : arr){
            pq.push(i);
        }
        
        int ans = 0;
        while(pq.size() > 1){
            int n1 = pq.top();pq.pop();
            int n2 = pq.top();pq.pop();
            ans += n1+ n2;
            pq.push(n1+n2);
        }
        return ans;
    }
};
